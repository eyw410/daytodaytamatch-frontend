@require "helpers"

//- colors, ordered light to dark
color1 = #E5E1EE
color2 = #B7C3F3
color3 = #7D8CC4
color4 = #726DA8
color5 = #0D324D

//- navbar attributes
navbar-height = 50px// 25px
navbar-font = 'Raleway', sans-serif // Futura, sans-serif
navbar-color = color1
navbar-bg = color1

//- font families
h2-font = 'Raleway', sans-serif // Futura, sans-serif
body-font = 'Raleway', sans-serif // Consolas, sans-serif

//- colors
h2-color = color5

html, body
    height 100%
    width 100%
    border none
    margin 0%
    padding 0%
    display inline-block
    background-color color1

//- NAVIGATION BAR
#navbar
    z-index 1
    position fixed
    top 0px
    left 0px
    width calc(100% - 40px)
    height navbar-height
    padding 20 px
    background navbar-bg
    display inline-block

#navbar span
    color navbar-color
    font-size 1em
    text-transform lowercase
    font-family navbar-font
    display inline-block

#nb-header
    text-transform uppercase
    display inline-block

#nb-items
    float right
    display inline-block
    vertical-align center

.dropbtn
    background-color transparent
    color color3
    font-size 28px
    border none
    cursor pointer

.dropbtn:hover
    outline 0 !important

.dropbtn:active
    outline 0 !important

/* The container <div> - needed to position the dropdown content */
.dropdown
    position relative
    display inline-block
    
.dropdown-content
    display none
    position absolute
    background-color color4
    min-width 160px
    box-shadow 0px 8px 16px 0px rgba(0,0,0,0.2)
    z-index 1
    right 0

.dropdown-content a
    text-transform uppercase
    color navbar-color
    padding: 12px 16px;
    text-decoration none
    display block
    
.dropdown-content a:hover
    color navbar-color
    text-decoration underline
    cursor pointer
    opacity .8
    background-color color3

.dropdown-content a:active
    opacity 1
    
.dropdown:hover .dropdown-content
    display block

//- PAGE CONTENT
.content
    position relative
    margin-top 90px
    padding-top 0px
    padding-bottom 0px
    border 0%
    width 100%
    height calc(100% - 90px)

h2
    font-family h2-font
    color h2-color

//- FORM
.form-box
    width calc(100% - 60px - 20%)
    margin-top 0%
    margin-left 10%
    margin-right 10%
    border none
    padding-left 30px
    padding-right 30px
    padding-top 30px
    padding-bottom 30px
    font-family body-font
    text-align Center

.fb-item input
    -webkit-transition-duration 0.8s
    transition-duration 0.8s
    width 60%
    font-family body-font
    border none
    border-bottom 2px solid #babec4
    font-size 20px
    padding 2%
    outline none
    color color5
    background-color color1

.fb-item input:placeholder
    color #babec4

.fb-item input:focus
    outline none
    border-bottom 2px solid color4
    color color4

#submit
    outline none
    background-color color3
    border 1px solid color3
    border-radius 48px
    padding 15px
    padding-left 20px
    padding-right 20px
    text-align center
    display inline-block
    font-size 16px
    color white
    font-family body-font

#submit:hover
    outline none
    background-color color4
    border 1px solid color4
    cursor pointer
    font-size 20px
    border-radius 60px

#submit:active
    outline none
    color color5
    font-size 20px
    border-radius 60px

#buttons
    margin-top 0px
    margin-bottom 0px
    width 100%
    height 90%

#buttons button
    outline none
    position relative
    width 100%
    padding 0
    background-color color3
    border 10px solid white
    border-radius 48px
    text-align center
    display inline-block
    font-size 10vh
    color color5
    font-family body-font
    margin 0
    
#buttons button:hover
    cursor pointer
    background-color color4
    color color1
    opacity 0.85
    
#buttons button:active
    opacity 1
    
#path
    float left
    margin-top 0px
    margin-bottom 0px
    width 100%
    height 10%
    display inline-block
    
#path button
    outline none
    position relative
    width 20%
    height 100%
    padding 0
    background-color color5
    text-align center 
    display inline-block
    font-size 1.5vh
    border none
    color white
    font-family body-font
    margin 0
    //-  -webkit-clip-path: polygon(0% 0%, 75% 0%, 100% 50%, 75% 100%, 0% 100%)
    //-  clip-path: polygon(0% 0%, 75% 0%, 100% 50%, 75% 100%, 0% 100%)
    -webkit-clip-path: polygon(75% 0%, 100% 50%, 75% 100%, 0% 100%, 25% 50%, 0% 0%);
    clip-path: polygon(75% 0%, 100% 50%, 75% 100%, 0% 100%, 25% 50%, 0% 0%);

#path button:hover
    cursor pointer
    opacity 0.8
    
#path button:active
    opacity 1

datalist#classes
    font-family body-font

.table
    align center

.table table
    width 40%
    align center
    table-layout fixed
    text-align left
    vertical-align center
    margin-left 30%
    margin-right 30%
    font-family body-font
    border 1px solid color5

.table th
    border none

.table td
    padding 20px
    border none //- 1px solid color5
    border-radius 20px
    
.x-button
    color color5
    outline none
    height 80%
    vertical-align center
    padding 0
    background-color transparent
    text-align center 
    display inline-block
    font-size 3vh
    border none
    font-family body-font
    margin 0
    float right

button#find
    color color1
    background-color color4
    opacity 1
    
.choice-block
    width 100%
    height 100%

.error-message
    visibility hidden
    color red
    font-weight bold
    text-align left
    padding 1rem 0

.modal
    display none
    position fixed
    left 0
    top 0
    z-index 100
    width 100%
    height 100%
    overflow auto
    background-color #000
    background-color rgba(0, 0, 0, .5)

.modal-content
    max-width 90%
    margin 10% auto
    padding 2rem
    border 1px solid #888
    background-color white
    border-radius 5px
    text-align center
