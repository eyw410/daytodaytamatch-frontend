extends template

block content
    .content
        #js-error-message.error-message
        form
            .form-box(style='text-align:center')
                h2 Register
                .fb-item
                    span Username
                    br
                    input(type='text' name='username' placeholder='Noah')
                .fb-item
                    span Email
                    br
                    input(type='email' name='email' placeholder='example@gmail.com') 
                .fb-item
                    span Password
                    br
                    input(type='password' name='password' placeholder='******')
                .fb-item
                    span Confirm Password
                    br
                    input(type='password' name='confirm' placeholder='******')
                .fb-item
                    span Class Year
                    br
                    input(type='number' name='classYear' placeholder='2021')
                .fb-item
                    span House/Dorm
                    br
                    input(type='text' name='house' placeholder='Quincy')
                .fb-item
                    span Interests
                    br
                    select
                        option(value=a) a
                        option(value=b) b
                        option(value=c) c
                br
                button#submit(type='button' onclick='submitUser()') Register

        .modal#js-success
            .modal-content
                h2 Thank you for registering!





