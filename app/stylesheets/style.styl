@require "helpers"

//- colors, ordered light to dark
color1 = #E5E1EE
color2 = #B7C3F3
color3 = #7D8CC4
color4 = #726DA8
color5 = #0D324D

navbar-height = 25px
navbar-font = Futura, sans-serif
navbar-color = color1
navbar-bg = color5

h2-font = Futura, sans-serif
body-font = Futura, sans-serif

//- NAVIGATION BAR
#navbar
    position fixed
    top 0px
    left 0px
    width calc(100% - 40px)
    height navbar-height
    padding 20 px
    background navbar-bg

#navbar span
    color navbar-color
    font-size 1em
    text-transform lowercase
    font-family navbar-font

#nb-header span
    text-transform uppercase
    
#nb-items
    float right

#nb-items *
    padding-left 20px

#nb-items a
    color navbar-color
    text-decoration none

#nb-items a:hover
    color navbar-color
    text-decoration underline

#nb-items a:active
    color grey
    text-decoration underline
    
//- PAGE CONTENT
.content
    margin-bottom 20px
    margin-top navbar-height
    padding-top 20px
    width 100%

h2
    font-family h2-font

//- FORM
.form-box
    width calc(100% - 60px - 50%)
    margin-top 0%
    margin-left 25%
    margin-right 25%
    border 1px solid black
    padding-left 30px
    padding-right 30px
    padding-top 30px
    padding-bottom 30px
    font-family body-font
    text-align Center

.fb-item input
    -webkit-transition-duration 0.8s
    transition-duration 0.8s
    width 60%
    font-family body-font
    border none
    border-bottom 2px solid #babec4
    font-size 20px
    padding 2%
    outline none

.fb-item input:placeholder
    color #babec4

.fb-item input:focus
    outline none
    border-bottom 2px solid black
    color solid black

#submit
    outline none
    background-color color4
    border 1px solid color4
    padding 15px
    padding-left 20px
    padding-right 20px
    text-align center
    display inline-block
    font-size 16px
    color white
    -webkit-transition-duration 0.4s
    transition-duration 0.4s

#submit:hover
    outline none
    background-color color5
    border 1px solid color5
    cursor pointer

#submit:active
    outline none
    border 1px solid color5
    background-color color4
    color #4f4f4f

.error-message
    visibility hidden
    color red
    font-weight bold
    text-align left
    padding 1rem 0
.modal
    display none
    position fixed
    left 0
    top 0
    z-index 100
    width 100%
    height 100%
    overflow auto
    background-color #000
    background-color rgba(0, 0, 0, .5)
.modal-content
    max-width 90%
    margin 10% auto
    padding 2rem
    border 1px solid #888
    background-color white
    border-radius 5px
    text-align center




