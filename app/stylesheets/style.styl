@require "helpers"

//- colors, ordered light to dark
color1 = #E5E1EE
color2 = #B7C3F3
color3 = #7D8CC4
color4 = #726DA8
color5 = #0D324D

navbar-height = 25px
navbar-font = Futura, sans-serif
navbar-color = color1
navbar-bg = color5

//- NAVIGATION BAR
#navbar
    position fixed
    top 0px
    left 0px
    width calc(100% - 40px)
    height navbar-height
    padding 20 px
    background navbar-bg

#navbar span
    color navbar-color
    font-size 1em
    text-transform lowercase
    font-family navbar-font

#nb-header span
    text-transform uppercase
    
#nb-items
    float right

#nb-items *
    padding-left 20px

#nb-items a
    color navbar-color
    text-decoration none

#nb-items a:hover
    color navbar-color
    text-decoration underline

#nb-items a:active
    color grey
    text-decoration underline
    
//- PAGE CONTENT
.content
    margin-bottom 20px
    margin-top navbar-height
    padding-top 20px
    width 100%

.error-message
    visibility hidden
    color red
    font-weight bold
    text-align left
    padding 1rem 0
.modal
    display none
    position fixed
    left 0
    top 0
    z-index 100
    width 100%
    height 100%
    overflow auto
    background-color #000
    background-color rgba(0, 0, 0, .5)
.modal-content
    max-width 90%
    margin 10% auto
    padding 2rem
    border 1px solid #888
    background-color white
    border-radius 5px
    text-align center






